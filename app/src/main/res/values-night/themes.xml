<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Passwordia" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="colorPrimary">@color/feedColor</item>
        <item name="android:statusBarColor">@color/feedColor</item>
        <item name="android:windowTranslucentStatus">false</item>
    </style>

    <style name="SearchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="android:background">@drawable/search_view_background</item>
    </style>

    <style name="InputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">@color/text_input_box_stroke</item>
        <item name="hintTextColor">@color/white</item>
        <item name="boxBackgroundMode">outline</item>
        <item name="android:textCursorDrawable">@drawable/custom_cursor</item>
    </style>


</resources>